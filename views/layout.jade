html
  head
    title= title
    style(type='text/css')= g_color
    link(rel='stylesheet', href='/stylesheets/jquery-ui-1.8.16.custom.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
    script(type='text/javascript', src='http://ajax.googleapis.com/ajax/libs/jquery/1.6.2/jquery.min.js')
    script(type='text/javascript', src='/javascripts/jquery-ui-1.8.16.custom.min.js')
    
  body
    
    !{flashMessages}
    #header
     - if (!myauth.loggedIn)
       h3
         a(href='/register') Register
         |  or
         a(href='/login') Login
         
     - else
       h3
         a(href='/#{myauth.username}') #{myauth.username}
         |  \| 
         a(href='/logout') Logout

     #nav()
       a(href='/') Home
       |  \| 
       - if (myauth.loggedIn)
         a(href='/#{myauth.username}') Public Profile
         |  \|  
       a(href='\users') Users
    != body
    #footer
      script(type='text/javascript', src='/javascripts/olive_funcs.js')
      script(type='text/javascript', src='/socket.io/socket.io.js')
      script
        var socket = io.connect();
        socket.on('color_change', function (data) {
          console.log(data);
          $("body").css("background-color","#"+data.color);
          //socket.emit('set_color', {change_color: 'ADFF2F' });
        });
        socket.on('update_color', function (data) {
          console.log(data);
          $("body").css("background-color","#"+data.color);
        });
      script
        $(function() {
          //$( "#submit_button").button();
          $( "#submit_button" ).click(function(event) { setWindowColor(); });
        });
